<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShipWrecked">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/shipWreck"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="centerCrop" />

                <android.support.v7.widget.CardView
                    android:id="@+id/seedId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shipWreck"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="2dp"
                    tools:targetApi="lollipop">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#222C37">

                        <ImageView
                            android:id="@+id/copy_content"
                            android:layout_width="32sp"
                            android:layout_height="32sp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:clickable="true"
                            android:contentDescription="@string/app_name"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:onClick="copySeedShipWrecked"
                            android:padding="2dp"
                            android:src="@drawable/ic_content_copy_black_24dp" />

                        <TextView
                            android:id="@+id/seed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/karla_bold"
                            android:paddingEnd="12dp"
                            android:paddingStart="12dp"
                            android:paddingTop="12dp"
                            android:text="SEED ID"
                            android:textAlignment="viewStart"
                            android:textColor="#FFF"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/seed"
                            android:fontFamily="@font/karla"
                            android:paddingBottom="10dp"
                            android:paddingEnd="12dp"
                            android:paddingStart="12dp"
                            android:paddingTop="4dp"
                            android:text="-1618472320"
                            android:textColor="#CFE441" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seedId"
                    android:fontFamily="@font/karla"
                    android:padding="12dp"

                    android:text="In this seed you’ll spawn right next to a big and extraordinary ocean. Go for a swim into the far depths of the ocean and you’ll find an almost intact shipwreck surrounded by a plentiful of beautiful corals in all colors you can possibly imagine. It’s a great seed to try out if you want a quick way to explore some of the new ocean features which are coming in the Update " />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1"
                    android:fontFamily="@font/karla"
                    android:padding="12dp"
                    android:text="The spawn is admittedly kind of normal (and boring), but the actual truth is that not far away from spawn there are plenty of corals and also a shipwreck with a treasure chest." />

                <ImageView
                    android:id="@+id/imageV1"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_below="@id/text2"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="5dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/imageV2"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_below="@id/imageV1"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="5dp"
                    android:scaleType="centerCrop" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageV2"
                    android:layout_marginTop="12dp"
                    app:cardElevation="5dp"
                    tools:targetApi="lollipop">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#222C37"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/karla_bold"
                            android:padding="12dp"
                            android:text="Coordinates: 482 48 43"
                            android:textColor="#FFF" />

                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </ScrollView>


    </android.support.v7.widget.CardView>

</RelativeLayout>