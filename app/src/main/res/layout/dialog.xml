<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/siapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/karla_bold"
                android:paddingTop="9dp"
                android:text="CREATED BY"
                android:textAlignment="center"
                android:textColor="#242424"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="64sp"
                android:layout_height="64sp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/siapa"
                android:layout_marginStart="115dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:cropToPadding="true"
                android:src="@mipmap/mg_logo" />

            <ImageView
                android:layout_width="64sp"
                android:layout_height="64sp"
                android:layout_below="@+id/siapa"
                android:layout_toEndOf="@+id/imageLogo"
                android:contentDescription="@string/app_name"
                android:src="@drawable/logo_mcpedl" />

            <TextView
                android:id="@+id/ikhsan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageLogo"
                android:fontFamily="@font/karla"
                android:text="Ikhsan Assidiqie"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mcpedlownser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ikhsan"
                android:fontFamily="@font/karla_bold"
                android:paddingTop="9dp"
                android:text="CREDIT"
                android:textAlignment="center"
                android:textColor="#242424"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mcpedltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mcpedlownser"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/karla"
                android:text="MCPEDL.COM"
                android:textAlignment="center"
                android:textSize="18sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mcpedltext"
                android:layout_marginTop="8sp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/karla_bold"
                    android:padding="5sp"
                    android:text="v0.12.10.1 (Alpha)"
                    android:textAlignment="center"
                    android:textSize="15sp" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>