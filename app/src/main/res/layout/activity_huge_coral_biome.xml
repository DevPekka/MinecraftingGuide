<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HugeCoralBiome">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/hugeCoralImage"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="centerCrop" />

                <android.support.v7.widget.CardView
                    android:id="@+id/seedId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hugeCoralImage"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="2dp"
                    tools:targetApi="lollipop">

                    <RelativeLayout
                        android:background="#222C37"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="32sp"
                            android:layout_height="32sp"
                            android:id="@+id/copy_content"
                            android:onClick="copyHugeCoralBiome"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_content_copy_black_24dp"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            android:id="@+id/seed"
                            android:textColor="#FFF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/karla_bold"
                            android:paddingEnd="12dp"
                            android:paddingStart="12dp"
                            android:paddingTop="12dp"
                            android:text="SEED ID"
                            android:textAlignment="viewStart"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="#CFE441"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/seed"
                            android:fontFamily="@font/karla"
                            android:paddingBottom="10dp"
                            android:paddingEnd="12dp"
                            android:paddingStart="12dp"
                            android:paddingTop="4dp"
                            android:text="-1231215285" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seedId"
                    android:fontFamily="@font/karla"
                    android:padding="12dp"

                    android:text="This seed will spawn you right next to a big ocean biome. If you dive into the water to take a closer look then you’ll come across hundreds of beautiful coral structures. This seed is most likely one of the largest corals that’s been discovered to date for Minecraft: Bedrock Edition. Just remember to drink Potion of Night Vision and Potion of Water Breathing to be able to see better underwater." />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1"
                    android:fontFamily="@font/karla"
                    android:padding="12dp"
                    android:text="Turn around at spawn and you will see a huge ocean biome right next to you. In the water you’ll find all the corals." />

                <ImageView
                    android:id="@+id/imageV1Coral"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_below="@id/text2"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="5dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/imageV2Coral"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_below="@id/imageV1Coral"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="5dp"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

        </ScrollView>


    </android.support.v7.widget.CardView>

</RelativeLayout>